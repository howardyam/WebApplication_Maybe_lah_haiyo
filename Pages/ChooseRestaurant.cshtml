@page
@model WebApplication_Maybe_lah_haiyo.Pages.ChooseRestaurant
@{
}

<div class="text-center">
	<div class="mainText">
		<h1 class="display-4 text-capitalize text-black">
			Choose restaurant.
		</h1>
	</div>
</div>

@foreach(var R in Model.RestaurantsDB)
{
	<div class="col-4 mb-5">
        <h2>@R.RestaurantName</h2>
        <a class="btn btn-primary mt-1" asp-area="" asp-page="ChooseOrder" asp-route-R_ID="@R.R_ID" asp-route-RestaurantName="@R.RestaurantName"> Order</a>
	</div>
}